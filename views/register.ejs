<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"><link href="style1.css" rel="stylesheet">
</head>
<% if(typeof errors != 'undefined') { %> 
    <% errors.forEach(function(error) { %>
    <div class="alert">
     <%= error.msg %>
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  </div>
  <% }) %>
  <% } %>
  <% if(success_msg != ''){ %>
    <div class="alert">
      <%= success_msg %>
      <span class="closebtn" onclick="this.parentElement.style.display='none'">&times;</span>
      </button>
    </div>
    <% } %> <% if(error_msg != ''){ %>
      <div class="alert">
      <%= error_msg %>
      <span class="closebtn" onclick="this.parentElement.style.display='none'">&times;</span>
      </button>
    </div>
    <% } %>
    <% if(error != ''){ %>
      <div class="alert">
        <%= error %>
        <span class="closebtn" onclick="this.parentElement.style.display='none'">&times;</span>
        </button>
      </div>
      <% } %>
<form action="/register" method="POST">
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Employee Details</h3>
                    <div class="row register-form">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" id="firstname" class="form-control" placeholder="First Name *" value="<%= typeof firstname != 'undefined' ? firstname : '' %>" name="firstname" />
                            </div>
                            <div class="form-group">
                                <input type="text" id="lastname" class="form-control" placeholder="Last Name *" value="<%= typeof lastname != 'undefined' ? lastname : '' %>" name="lastname" />
                            </div>
                            <div class="form-group">
                                <input type="password" id="password" class="form-control" placeholder="Password *" value="<%= typeof password != 'undefined' ? password : '' %>" name="password"/>
                            </div>
                            <div class="form-group">
                                <input type="password" id="password2" class="form-control"  placeholder="Confirm Password *" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" name="password2"/>
                            </div>
                            <div class="form-group">
                                <div class="maxl">
                                    <label class="radio inline"> 
                                        <input type="radio" name="gender" value="male" checked>
                                        <span> Male </span> 
                                    </label>
                                    <label class="radio inline"> 
                                        <input type="radio" name="gender" value="female">
                                        <span>Female </span> 
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" id="email" class="form-control" placeholder="Your Email *" value="<%= typeof email != 'undefined' ? email : '' %>" name="email" />
                            </div>
                            <div class="form-group">
                                <input type="text" id="phone" minlength="10" maxlength="10" class="form-control" placeholder="Your Phone *" value="<%= typeof phone != 'undefined' ? phone : '' %>" name="phone" />
                            </div>
                            <div class="form-group">
                                <select class="form-control">
                                    <option class="hidden" id="age" name="age" value=""  selected disabled>select your age</option>
                                    <option>10+</option>
                                    <option>18+</option>
                                    <option>30+</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="enter your course *" value="" name="course" />
                            </div>
                            <input type="submit" class="btnRegister"  value="Register"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>